<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcardQuestion"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:lineSpacingExtra="5sp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="40sp"
        android:textColor="@color/questionColor"
        android:background="@color/questionBackground"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="72dp" />

    <TextView
        android:id="@+id/flashcardAnswer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="5sp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="40sp"
        android:textColor="@color/answerColor"
        android:background="@color/answerBackground"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="72dp" />

    <ImageView
        android:id="@+id/plusButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        tools:layout_editor_absoluteX="318dp"
        tools:layout_editor_absoluteY="501dp"
        android:src="@drawable/plus"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/editButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/plusButton"
        android:layout_marginStart="15dp"
        android:src="@drawable/edit"
        android:visibility="visible"
        tools:layout_editor_absoluteX="318dp"
        tools:layout_editor_absoluteY="501dp" />

    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/plusButton"
        android:layout_centerVertical="true"
        android:src="@drawable/next"
        android:visibility="visible"
        tools:layout_editor_absoluteX="318dp"
        tools:layout_editor_absoluteY="501dp" />

    <ImageView
        android:id="@+id/deleteDataButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/editButton"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_iconmonstr_eraser_2"
        android:visibility="visible"
        tools:layout_editor_absoluteX="318dp"
        tools:layout_editor_absoluteY="501dp" />

</RelativeLayout>